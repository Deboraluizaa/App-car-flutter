@{
    ViewData["Title"] = "Controle de Quilometragem";
}

<div class="text-center">
    <h1 class="display-4">Controle de Quilometragem de Veículos</h1>
    <p>Use esta página para adicionar e visualizar registros de quilometragem.</p>
</div>

<div class="container">
    <h2>Adicionar Nova Viagem</h2>
    <form id="adicionar-form">
        <div class="form-group">
            <label for="quilometragem">Quilometragem:</label>
            <input type="number" id="quilometragem" class="form-control" step="0.01" required />
        </div>
        <div class="form-group">
            <label for="motorista">Motorista:</label>
            <input type="text" id="motorista" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="cidadeDestino">Cidade de Destino:</label>
            <input type="text" id="cidadeDestino" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="urlFoto">URL da Foto:</label>
            <input type="url" id="urlFoto" class="form-control" />
        </div>
        <button type="button" id="adicionar-btn" class="btn btn-primary">Adicionar Viagem</button>
    </form>
</div>

<div class="container mt-4">
    <h2>Lista de Viagens</h2>
    <ul id="viagens-lista" class="list-group">
        <!-- A lista será preenchida pelo JavaScript -->
    </ul>
</div>

<script src="/js/site.js"></script>
